<p id="notice"><%= notice %></p>

<h1>Listing Atmospheres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atmospheres.each do |atmosphere| %>
      <tr>
        <td><%= atmosphere.name %></td>
        <td><%= link_to 'Show', atmosphere %></td>
        <td><%= link_to 'Edit', edit_atmosphere_path(atmosphere) %></td>
        <td><%= link_to 'Destroy', atmosphere, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atmosphere', new_atmosphere_path %>
